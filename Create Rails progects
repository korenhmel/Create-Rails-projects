<p style="Normal" xid="524" props="font-family:Times New Roman; dom-dir:ltr; font-style:normal; margin-left:0.0000in; lang:-none-; text-align:left; text-indent:0.0000in; text-position:normal; margin-top:0.0000in; font-weight:bold; line-height:1.000000; text-decoration:none; font-size:12pt; margin-right:0.0000in; margin-bottom:0.0000in"><c props="font-family:Times New Roman; font-size:12pt; lang:-none-; text-position:normal; font-weight:bold; font-style:normal; text-decoration:none">   @article  = Article.find(params[:id])</c><c props="font-family:Times New Roman; font-size:12pt; lang:-none-; text-position:normal; font-weight:bold; font-style:normal; text-decoration:none"></c></p>
